<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | StayOrbit</title>
    <link rel="stylesheet" href="/output.css" />
    <link rel="icon" href="/icon.png" />
  </head>
  <body class="bg-gradient-to-br from-cyan-100 to-sky-200">
    <%- include('../partials/loader.ejs') %>

    <div class="flex flex-col min-h-screen">
      <%- include('../partials/navbar.ejs') %>

      <div
        class="pt-32 pb-20 flex items-center justify-center flex-grow px-6 bg-gradient-to-br from-cyan-100 to-sky-200"
      >
        <form
          action="/auth/login"
          method="POST"
          class="w-full max-w-md p-8 space-y-6 bg-gradient-to-br from-white/60 to-white/40 shadow-xl rounded-xl"
        >
          <h3 class="text-2xl font-bold text-center text-sky-800">
            üîê Login to StayOrbit
          </h3>
          <% if (typeof message !=='undefined' && message && message.length> 0) { %>
            <div class="bg-red-100 border border-red-300 text-red-800 text-sm sm:text-base font-semibold p-3 rounded-md text-center">
              <%= message %>
            </div>
          <% } %>

          <!-- Email -->
          <input
            type="email"
            name="email"
            placeholder="test@gmail.com"
            required
            class="w-full px-4 py-2 bg-white text-sky-900 placeholder-sky-500 border border-sky-200 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-400"
          />

          <!-- Password -->
          <div class="relative">
            <input
              type="password"
              name="password"
              id="passwordInput"
              placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
              required
              class="w-full px-4 py-2 bg-white text-sky-900 placeholder-sky-500 border border-sky-200 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-400 pr-16"
            />
            <button
              type="button"
              onclick="togglePasswordVisibility()"
              class="absolute inset-y-0 right-2 flex items-center px-2 text-sm text-sky-600 font-medium focus:outline-none"
            >
              <span
                class="hidden sm:inline bg-sky-300 rounded-md pt-1 pb-1 pl-2 pr-2 hover:cursor-pointer"
                id="toggleText"
                >View</span
              >
              <span
                class="inline sm:hidden bg-sky-300 rounded-md pt-1 pb-1 pl-2 pr-2 hover:cursor-pointer"
                id="toggleIcon"
                >ü´£</span
              >
            </button>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full py-2 font-semibold text-white bg-sky-600 rounded-md transition duration-200 hover:bg-sky-700 hover:cursor-pointer"
          >
            Login
          </button>

          <!-- Register Link -->
          <p class="text-center text-sm text-sky-800">
            Don't have an account?
            <a
              href="/auth/register"
              class="font-semibold text-sky-700 hover:text-sky-900"
              >Register</a
            >
          </p>
        </form>
      </div>

      <%- include('../partials/footer.ejs') %>
    </div>

    <script src="/js/loaderLogic.js"></script>
    <script src="/js/show-hide-password-login.js"></script>
  </body>
</html>
